// 3. REACTIVE UI SYNTAX (Web/App)
// ═══════════════════════════════════════════════════════════════════════════════
component HoloCard {
    props: { text: str },
    
    func render(&self) -> VNode {
        Card(variant: .glass) {
            Text(self.text)
                .gradient(.aurora)
                .animate(animations.shimmer)
        }
        .on_hover { Physics::levitate(height: 10.0) }
    }
}

