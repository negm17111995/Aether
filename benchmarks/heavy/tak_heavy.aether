// Aether Heavy Benchmark - Tak Recursion (CPU Intensive)
// Tests: Speed, Stack efficiency, Tail-call optimization

func tak(x: Int, y: Int, z: Int) -> Int {
    if y >= x {
        z
    } else {
        tak(
            tak(x - 1, y, z),
            tak(y - 1, z, x),
            tak(z - 1, x, y)
        )
    }
}

func main() -> Int {
    // Heavy test - this creates millions of recursive calls
    tak(30, 20, 10)
}
