func main() -> Int {
    let n = 1000
    let size = n * 8
    
    let a = malloc(size)
    let b = malloc(size)
    let c = malloc(size)
    
    // Fill arrays
    let i = 0
    while i < n {
        store(a, i * 8, i)
        store(b, i * 8, i)
        i = i + 1
    }
    
    // Add arrays: c = a + b
    i = 0
    while i < n {
        let va = load(a, i * 8)
        let vb = load(b, i * 8)
        store(c, i * 8, va + vb)
        i = i + 1
    }
    
    // Verify c[10] == 20
