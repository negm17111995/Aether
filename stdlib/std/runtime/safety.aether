// ============================================================================
// MEMORY SAFETY
// ============================================================================

// Ownership tracking at compile time
const OWNER_NONE: Int = 0
const OWNER_STACK: Int = 1
const OWNER_HEAP: Int = 2
const OWNER_BORROWED: Int = 3

// Safe allocation - tracked and bounded
func safe_alloc(size: Int) -> Int {
    if size <= 0 {
        return 0
    }
    if size > 1073741824 {  // 1GB max
        panic_oom()
        return 0
    }
    
    // Allocate: Header(16) + User(size) + Guard(8)
    let ptr = ae_malloc(size + 24)
    
    // Header: [size, owner]
    ae_store64(ptr, size)
    ae_store64(ptr + 8, OWNER_HEAP)
    
    // Guard bytes for overflow detection (0xDEADBEEFDEADBEEF)
    let guard_val = 0 - 2401053088876216593
    // Store guard after user data (ptr + 16 + size)
    ae_store64(ptr + 16 + size, guard_val)
    
    ptr + 16  // Return pointer after header
}

// Safe free - validates pointer
func safe_free(ptr: Int) {
    if ptr == 0 {
        return
    }
    
    let header = ptr - 16
    let size = ae_load64(header)
    let owner = ae_load64(header + 8)
    
    // Verify it's a heap allocation
    if owner != OWNER_HEAP {
        panic_double_free()
        return
    }
    
    // Check guard bytes (0xDEADBEEFDEADBEEF)
    let expected_guard = 0 - 2401053088876216593
    let guard = ae_load64(ptr + size)
    if guard != expected_guard {
        panic_buffer_overflow()
        return
    }
    
    // Mark as freed
    ae_store64(header + 8, OWNER_NONE)
    
    __builtin_free(header)
}

// ============================================================================
// BOUNDS CHECKING
// ============================================================================

// Safe array access
func safe_get(arr: Int, idx: Int, len: Int) -> Int {
    if idx < 0 || idx >= len {
        panic_out_of_bounds(idx, len)
        return 0
    }
    ae_load64(arr + idx * 8)
}

func safe_set(arr: Int, idx: Int, len: Int, val: Int) {
    if idx < 0 || idx >= len {
        panic_out_of_bounds(idx, len)
        return
    }
    ae_store64(arr + idx * 8, val)
}

// ============================================================================
// THREAD SAFETY
// ============================================================================

// Safe mutex - prevents deadlock
func mutex_new() -> Int {
    let m = ae_malloc(24)
    ae_store64(m, 0)       // locked = false
    ae_store64(m + 8, 0)   // owner thread
    ae_store64(m + 16, 0)  // lock count (for reentrant)
    m
}

func mutex_lock(m: Int) -> Bool {
    let tid = __builtin_thread_id()
    let owner = ae_load64(m + 8)
    
    // Reentrant check
    if owner == tid {
        let count = ae_load64(m + 16)
        ae_store64(m + 16, count + 1)
        return true
    }
    
    // Try with timeout to prevent deadlock
    let start = now_ms()
    while 1 {
        if __builtin_atomic_cas(m, 0, 1) {
            ae_store64(m + 8, tid)
            ae_store64(m + 16, 1)
            return true
        }
        
        if now_ms() - start > 5000 {
            // Deadlock detected
            panic_deadlock()
            return false
        }
        
        __builtin_yield()
    }
    false
}

func mutex_unlock(m: Int) {
    let tid = __builtin_thread_id()
    let owner = ae_load64(m + 8)
    
    if owner != tid {
        panic_unlock_not_owner()
        return
    }
    
    let count = ae_load64(m + 16)
    if count > 1 {
        ae_store64(m + 16, count - 1)
        return
    }
    
    ae_store64(m + 8, 0)
    ae_store64(m + 16, 0)
    __builtin_atomic_store(m, 0)
}

