// Emit C type name for FFI type
func ffi_emit_type(g: Int, t: Int) {
    let kind = ffi_type_kind(t)
    if kind == FFI_I8 { cg_emit_char(g, 105) cg_emit_char(g, 110) cg_emit_char(g, 116) cg_emit_char(g, 56) cg_emit_char(g, 95) cg_emit_char(g, 116) return } // int8_t
    if kind == FFI_I16 { cg_emit_char(g, 105) cg_emit_char(g, 110) cg_emit_char(g, 116) cg_emit_char(g, 49) cg_emit_char(g, 54) cg_emit_char(g, 95) cg_emit_char(g, 116) return } // int16_t
    if kind == FFI_I32 { cg_emit_char(g, 105) cg_emit_char(g, 110) cg_emit_char(g, 116) cg_emit_char(g, 51) cg_emit_char(g, 50) cg_emit_char(g, 95) cg_emit_char(g, 116) return } // int32_t
    if kind == FFI_I64 { cg_emit_char(g, 105) cg_emit_char(g, 110) cg_emit_char(g, 116) cg_emit_char(g, 54) cg_emit_char(g, 52) cg_emit_char(g, 95) cg_emit_char(g, 116) return } // int64_t
    if kind == FFI_U8 { cg_emit_char(g, 117) cg_emit_char(g, 105) cg_emit_char(g, 110) cg_emit_char(g, 116) cg_emit_char(g, 56) cg_emit_char(g, 95) cg_emit_char(g, 116) return } // uint8_t
    if kind == FFI_PTR { cg_emit_char(g, 118) cg_emit_char(g, 111) cg_emit_char(g, 105) cg_emit_char(g, 100) cg_emit_char(g, 42) return } // void*
    // Default: long long
    cg_emit_char(g, 108) cg_emit_char(g, 111) cg_emit_char(g, 110) cg_emit_char(g, 103) cg_emit_space(g)
    cg_emit_char(g, 108) cg_emit_char(g, 111) cg_emit_char(g, 110) cg_emit_char(g, 103)
}

// Emit pragma pack for struct
func ffi_emit_pack_begin(g: Int) {
    // #pragma pack(push, 1)
    cg_emit_char(g, 35) // #
    cg_emit_char(g, 112) cg_emit_char(g, 114) cg_emit_char(g, 97) // pra
    cg_emit_char(g, 103) cg_emit_char(g, 109) cg_emit_char(g, 97) // gma
    cg_emit_space(g)
    cg_emit_char(g, 112) cg_emit_char(g, 97) cg_emit_char(g, 99) cg_emit_char(g, 107) // pack
    cg_emit_char(g, 40)
    cg_emit_char(g, 112) cg_emit_char(g, 117) cg_emit_char(g, 115) cg_emit_char(g, 104) // push
    cg_emit_char(g, 44) cg_emit_space(g)
    cg_emit_char(g, 49) // 1
    cg_emit_char(g, 41)
    cg_emit_nl(g)
}

func ffi_emit_pack_end(g: Int) {
    // #pragma pack(pop)
    cg_emit_char(g, 35)
    cg_emit_char(g, 112) cg_emit_char(g, 114) cg_emit_char(g, 97)
    cg_emit_char(g, 103) cg_emit_char(g, 109) cg_emit_char(g, 97)
    cg_emit_space(g)
    cg_emit_char(g, 112) cg_emit_char(g, 97) cg_emit_char(g, 99) cg_emit_char(g, 107)
    cg_emit_char(g, 40)
    cg_emit_char(g, 112) cg_emit_char(g, 111) cg_emit_char(g, 112) // pop
    cg_emit_char(g, 41)
    cg_emit_nl(g)
}

// Emit FFI struct
func ffi_emit_struct(g: Int, s: Int) {
    if ffi_struct_packed(s) == 1 {
        ffi_emit_pack_begin(g)
    }
    
    cg_emit_char(g, 116) cg_emit_char(g, 121) cg_emit_char(g, 112) // typ
    cg_emit_char(g, 101) cg_emit_char(g, 100) cg_emit_char(g, 101) // ede
    cg_emit_char(g, 102) cg_emit_space(g) // f 
    cg_emit_char(g, 115) cg_emit_char(g, 116) cg_emit_char(g, 114) // str
    cg_emit_char(g, 117) cg_emit_char(g, 99) cg_emit_char(g, 116) // uct
    cg_emit_space(g) cg_emit_char(g, 123)
    cg_emit_nl(g)
    
    let fields = ffi_struct_fields(s)
    let i = 0
    while i < vec_len(fields) {
        let f = vec_get(fields, i)
        cg_emit_space(g) cg_emit_space(g) cg_emit_space(g) cg_emit_space(g)
        ffi_emit_type(g, ffi_field_type(f))
        cg_emit_space(g)
        cg_emit_cstr(g, ffi_field_name(f))
        cg_emit_char(g, 59)
        cg_emit_nl(g)
        i = i + 1
    }
    
    cg_emit_char(g, 125) cg_emit_space(g)
    cg_emit_cstr(g, ffi_struct_name(s))
    cg_emit_char(g, 59)
    cg_emit_nl(g)
    
    if ffi_struct_packed(s) == 1 {
        ffi_emit_pack_end(g)
    }
    cg_emit_nl(g)
}

// Emit extern function declaration
func ffi_emit_extern(g: Int, f: Int) {
    // extern RetType name(params);
    cg_emit_char(g, 101) cg_emit_char(g, 120) cg_emit_char(g, 116) // ext
    cg_emit_char(g, 101) cg_emit_char(g, 114) cg_emit_char(g, 110) // ern
    cg_emit_space(g)
    
    let ret = extern_func_return(f)
    if ret == 0 {
        cg_emit_char(g, 118) cg_emit_char(g, 111) cg_emit_char(g, 105) cg_emit_char(g, 100) // void
    } else {
        ffi_emit_type(g, ret)
    }
    cg_emit_space(g)
    cg_emit_cstr(g, extern_func_name(f))
    cg_emit_char(g, 40)
    
    let params = extern_func_params(f)
    if vec_len(params) == 0 {
        cg_emit_char(g, 118) cg_emit_char(g, 111) cg_emit_char(g, 105) cg_emit_char(g, 100) // void
    } else {
        let i = 0
        while i < vec_len(params) {
            if i > 0 { cg_emit_char(g, 44) cg_emit_space(g) }
            let p = vec_get(params, i)
            ffi_emit_type(g, ae_load64(p + 8))
            cg_emit_space(g)
            cg_emit_cstr(g, ae_load64(p))
            i = i + 1
        }
    }
    
    cg_emit_char(g, 41) cg_emit_char(g, 59)
    cg_emit_nl(g)
}
